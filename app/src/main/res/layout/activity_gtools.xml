<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".General.Gtools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/include"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/teksscale"
            android:layout_width="340sp"
            android:layout_height="39sp"
            android:layout_below="@+id/include"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Tools"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_materi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="Tool Selection"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/line1desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:padding="20sp"
                android:text="a. Pot
                \n\nUse stainless steel or blirik pans instead of pans made of metal, such as iron, aluminum, and brass because they will release ingredients that contaminate the ingredients that are being made."
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/line1desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1desc"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:padding="20sp"
                android:text="b. Bottle
                \n\nA good bottle to use is a glass bottle, not used mineral water bottles or plastic bottles in other forms, because they are not in accordance with the sterility of the equipment to be used."
                android:textColor="@color/black"
                android:textSize="14sp" />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>